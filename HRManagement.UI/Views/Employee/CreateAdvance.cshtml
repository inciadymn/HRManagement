@model CreateEmployeeAdvanceVM

@{
    ViewData["Title"] = "CreateAdvance";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int id = ViewContext.HttpContext.Session.GetInt32("ID").Value;

    //var message = ViewBag.Message;

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}

<style>
	.form-group{
		position:center;
		padding-top:40px;
		padding-left:200px;
	}

	.item {
		margin-top:20px;
		margin-bottom: 20px;
	}
    .hataMesajıKırmızı {
        color: red;
    }
</style>
    
<body>
    <form asp-action="CreateAdvance" asp-controller="Employee" method="post" enctype="multipart/form-data">
        @* enctype bunu Report adı gelsin diye yazılmalı *@
        <div class="form-group top">
            <div class="invisible item">
                <label asp-for="EmployeeID">
                    <input asp-for="EmployeeID" value=@id class="form-control" />
                </label>
            </div>

            <div class="item">
                <label asp-for="RequestDate"> <b>Talep Tarihi</b> </label>
                <input asp-for="RequestDate" type="text" value="@DateTime.Now" disabled class="form-control" required />
                <span asp-validation-for="RequestDate"></span>
            </div>

            <div class="item">
                <label asp-for="Price"> <b>Fiyat</b> </label>
                <input asp-for="Price" type="number" class="form-control" required />
                <span asp-validation-for="Price"></span>
            </div>

            @if (ViewBag.Message != null)
            {
                <h6 class="hataMesajıKırmızı">@ViewBag.Message</h6>
            }

            <div class="item">
                <label asp-for="Description"><b>Açıklama</b></label>
                <textarea asp-for="Description" class="form-control" placeholder="Açıklama giriniz..."></textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <div class="item">
                <label asp-for="AdvanceType"> <b>Avans Türü</b> </label>
                <select asp-for="AdvanceType" asp-items="Html.GetEnumSelectList<AdvanceType>()" class="form-control"> </select>
                <span asp-validation-for="AdvanceType"></span>
            </div>

            <div class="item">
                <button class="btn btn-primary btn-lg" type="submit"><b>Avans Ekle</b></button>
            </div>
        </div>
    </form>

    @*bootstrapv4*@
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C  +OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/ reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.min.js" integrity="sha384-  VHvPCCyXqtD5DqJeNxl2dtTyhF78xXNXdkwX1CZeRusQfRKp+tA7hAShOK/B/fQ2" crossorigin="anonymous"></script>

</body>

