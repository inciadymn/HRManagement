@model CreateEmployeePermissionVM

@{
    ViewData["Title"] = "CreatePermission";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
	.form-group{
		position:center;
		padding-top:150px;
		padding-left:200px
	}
</style>

<body>
		
	<form asp-action="CreatePermission" asp-controller="Employee" method="post">
		<div class="form-group top">
			<div class="invisible">
				<label asp-for="EmployeeID">
					<input asp-for="EmployeeID" value=@ViewBag.Data class="form-control" />
			</label></div>
			
	
			<label asp-for="StartDate"></label>
			<input asp-for="StartDate" type="date" class="form-control" />
				
	
			<label asp-for="FinishDate"></label>
			<input asp-for="FinishDate" type="date" class="form-control" />
				
	
			<label asp-for="Description"></label>
			<textarea asp-for="Description" class="form-control" placeholder="Leave a comment here" ></textarea>
				
	
