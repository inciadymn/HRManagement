    @* ************************* Eski form ************************* *@
    <form  method="post" enctype="multipart/form-data">
            <div class="form-group top">
                <div class="invisible item">
                    <label asp-for="EmployeeID">
                        <input asp-for="EmployeeID" value=@id class="form-control" />
                    </label>
                </div>

                <div class="item">
                    <label asp-for="StartDate"> <b>Başlangıç Tarihi</b> </label>
                    <input asp-for="StartDate" type="date" class="form-control" required />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="item">
                    <label asp-for="FinishDate"> <b>Bitiş Tarihi</b> </label>
                    <input asp-for="FinishDate" type="date" class="form-control" required />
                    <span asp-validation-for="FinishDate" class="text-danger"></span>
                </div>

                @if (ViewBag.Message != null)
                {
                    <h6 class="hataMesajıKırmızı">@ViewBag.Message</h6>
                }

                <div class="item">
                    <label asp-for="Description"><b>Açıklama</b></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Açıklama giriniz..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="item">
                    <label asp-for="PermissionType"> <b>İzin Türü</b> </label>
                    <select asp-for="PermissionType" asp-items="Html.GetEnumSelectList<PermissionType>()" class="form-control"> </select>
                    <span asp-validation-for="PermissionType" class="text-danger"></span>
                </div>

                <div class="item">
                    <input asp-for="Report" type="file" accept=".pdf" />
                </div>

                <div class="item">
                    <button class="btn btn-primary btn-lg" type="submit"><b>İzin Ekle</b></button>
                </div>
            </div>
        </form>

