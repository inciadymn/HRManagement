@model CreateEmployeePermissionVM

@{
    ViewData["Title"] = "CreatePermission";

    Layout = "~/Views/Shared/_Layout.cshtml";

    int id = ViewContext.HttpContext.Session.GetInt32("ID").Value;

    //var message = ViewBag.Message;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<style>
	.form-group{
		position:center;
		padding-top:40px;
		padding-left:200px;
	}

	.item {
		margin-top:20px;
		margin-bottom: 20px;
	}
    .hataMesajıKırmızı {
        color:red;
    }
</style>

<body>
    <form asp-action="CreatePermission" asp-controller="Employee" method="post" enctype="multipart/form-data">
        @* enctype bunu Report adı gelsin diye yazılmalı *@
        <div class="form-group top">
            <div class="invisible item">
                <label asp-for="EmployeeID">
                    <input asp-for="EmployeeID" value=@id class="form-control" />
                </label>
            </div>

            <div class="item">
                <label asp-for="StartDate"> <b>Başlangıç Tarihi</b> </label>
                <input asp-for="StartDate" type="date" class="form-control" required />
                <span asp-validation-for="StartDate"></span>
            </div>

            <div class="item">
                <label asp-for="FinishDate"> <b>Bitiş Tarihi</b> </label>
                <input asp-for="FinishDate" type="date" class="form-control" required />
                <span asp-validation-for="FinishDate"></span>
            </div>

            @if (ViewBag.Message != null)
            {
                <h6 class="hataMesajıKırmızı">@ViewBag.Message</h6>
            }

            <div class="item">
                <label asp-for="Description"><b>Açıklama</b></label>
                <textarea asp-for="Description" class="form-control" placeholder="Açıklama giriniz..."></textarea>
                <span asp-validation-for="Description"></span>
            </div>

            @*<label asp-for="PermissionType"></label>
            <select asp-for="PermissionType" class="form-control">
                <option >YillikIzin</option>
                <option >DogumIzni</option>
                <option >BabalikIzni</option>
                <option >EvlilikIzni</option>
                <option >HastalikIzni</option>
                <option >VefatIzni</option>
                <option >UcretsizIzin</option>
                <option >TasinmaIzni</option>
            </select>*@

            <div class="item">
                <label asp-for="PermissionType"> <b>İzin Türü</b> </label>
                <select asp-for="PermissionType" asp-items="Html.GetEnumSelectList<PermissionType>()" class="form-control"> </select>
                <span asp-validation-for="PermissionType"></span>
            </div>

            <div class="item">
                <input asp-for="Report" type="file" accept=".pdf" />
            </div>

            <div class="item">
                <button class="btn btn-primary btn-lg" type="submit"><b>İzin Ekle</b></button>
            </div>
        </div>
    </form>

    @*bootstrapv4*@
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C  +OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/ reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.min.js" integrity="sha384-  VHvPCCyXqtD5DqJeNxl2dtTyhF78xXNXdkwX1CZeRusQfRKp+tA7hAShOK/B/fQ2" crossorigin="anonymous"></script>

</body>
