@model SingleEmployeeVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var sum = ViewBag.sumPermision;  
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/employee-card.css" />
</head>

<body>

    <div class="content-container">
        <!-- employee-card Start -->
        @*<div class="align-self-lg-auto card-container" style="background-color:darkgray;">
                <h2 style="text-align:center">User Profile Card</h2>

                <div class="card-profile">
                        <img src="https://i.pinimg.com/736x/91/2c/e1/912ce19bfeadb1e9e2b7cee8f0a4f1bc.jpg" alt="Ammie" style="width:100%">
                        <h1>AD SOYAD</h1>
                        <p class="employee-title">Employee Title</p>
                        <p>Şirket İsmi</p>
                </div>
            </div>*@
        <!-- employee-card End -->
        <!-- employee-bilgi Start -->
        <div style="margin-top:80px; margin-left:140px; width:600px; height:275px; background-color:#343A40; color:white">
            <div style="padding-left:50px; padding-top:50px;">
                <div class="row">
                    <div class="col-md-4">
                        <label>Ad Soyad :</label>
                    </div>
                    <div class="col-md-4">
                        <p>@Model.FirstName @Model.LastName</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label>E-mail :</label>
                    </div>
                    <div class="col-md-4">
                        <p>@Model.Email</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label>Telefon Numarası :</label>
                    </div>
                    <div class="col-md-4">
                        <p>@Model.PhoneNumber</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label>Adres :</label>
                    </div>
                    <div class="col-md-7">
                        <p>@Model.Address</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- employee-bilgi End -->

        <div>

            <!-- Permisson Sum. List Table Start -->
            <div style="margin-top:50px;">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">İzin Kodu</th>
                            <th scope="col">İzin Türü</th>
                            <th scope="col">Talep Tarihi</th>
                            <th scope="col">Onay Durumu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in sum)
                        {
                        <tr>
                            <td>@item.PermissionID</td>
                            <td>@item.PermissionType</td>
                            <td>@item.RequestDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.PermitStatus</td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- Permisson Sum. List Table End -->

            <!-- Advance Sum. List Table Start -->
            <div style="margin-top:50px;">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Avans Kodu</th>
                            <th scope="col">Avans Tipi</th>
                            <th scope="col">Talep Tarihi</th>
                            <th scope="col">Onay Durumu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in sum)
                        {
                        <tr>
                            <td>#</td>
                            <td>#</td>
                            <td>#</td>
                            <td>#</td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- Advance Sum. List Table End -->

        </div>
    </div>


    @*bootstrapv4*@
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C  +OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/ reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.min.js" integrity="sha384-  VHvPCCyXqtD5DqJeNxl2dtTyhF78xXNXdkwX1CZeRusQfRKp+tA7hAShOK/B/fQ2" crossorigin="anonymous"></script>
</body>

