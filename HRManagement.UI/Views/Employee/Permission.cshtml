@model List<EmployeePermissionVM>

@{
    ViewData["Title"] = "Permission";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .izinEkle{
        color:snow;
    }
</style>

<body>

    <h4 style=" margin-top:100px; margin-left:550px">İzinlerim</h4>
    <!-- Permisson List Table Start -->
    <div style="margin-top:50px; margin-left:150px;">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">İzin Kodu</th> <!--PermissionID-->
                    <th scope="col">İzin Türü</th>
                    <th scope="col">Açıklama</th> <!--Description > Yana kaymasın yönetimine bak-->
                    <th scope="col">Talep tarihi</th>
                    <th scope="col">Baş. Tarihi</th>
                    <th scope="col">Bitiş Tarihi</th>
                    <th scope="col">Onay Durumu</th> <!--PPermitStatus > Sarı, Yeşil, Kırmızı bg-->
                </tr>
            </thead>
            <tbody>
                @foreach (EmployeePermissionVM item in Model)
                {
                    <tr>
                        <td>@item.PermissionID</td>
                        <td class="col-md-2">@item.PermissionType İzni</td>
                        <td>@item.Description</td>
                        <td>@item.RequestDate.ToString("dd/MM/yyyy")</td>
                        <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                        <td>@item.FinishDate.ToString("dd/MM/yyyy")</td>
                        <td>@item.PermitStatus</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="item">
            <button class="btn btn-primary btn-lg" type="submit"><a asp-action="CreatePermission" asp-controller="Employee" class="izinEkle">İzin Ekle</a></button>
        </div>
    </div>
    <!-- Permisson List Table End -->
    <!-- İzin Ekle butonu Start-->
    <!-- Gerek var mı? Zaten Side-bardan dinamik geçiş var-->
    <!-- İzin Ekle butonu End-->
